<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/all_data_linear"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:weightSum="20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
    >
        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:layout_weight="1.5"
                  style="@style/square_blue_stroke"
                  android:text="No"
                  android:id="@+id/up_no"/>
        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:layout_weight="7"
                  style="@style/square_blue_stroke"
                  android:text="@string/r_m_m_l_tb_tv2"
                  android:id="@+id/up_product_name"/>
        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="5.5"
                  android:gravity="center"
                  style="@style/square_blue_stroke"
                  android:text="@string/r_m_m_l_tb_tv3"
                  android:id="@+id/up_unit_price"/>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:layout_weight="6"
                      style="@style/square_blue_stroke"
                      android:gravity="center"
                      android:id="@+id/btn_linear">
            <Button style="@style/small_btn_syle"
                    android:id="@+id/btn_minus"
                    android:text="-"
                    android:layout_marginLeft="5dp"
                    android:layout_width="20dp"/>

            <EditText android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:text="@string/r_m_m_l_tb_tv4"
                      android:textSize="14sp"
                      android:id="@+id/up_quantity"/>
            <Button
                    style="@style/small_btn_syle"
                    android:text="+"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btn_plus"
                    android:layout_width="20dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>