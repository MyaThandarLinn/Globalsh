<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">
    <ImageView
            android:id="@+id/img"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:scaleType="center"
            android:src="@drawable/ic_document"/>

    <TextView
            android:id="@+id/txt01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:padding="5dp"
            android:textColor="@color/iron"
            android:text="게시판 글제목"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
            android:id="@+id/txt02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt01"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/img"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="5dp"
            android:textColor="@color/iron"
            android:text="2016-03-07 23:33"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
            android:id="@+id/txt03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt04"
            android:layout_toLeftOf="@+id/txt04"
            android:drawableLeft="@drawable/ic_clip"
            android:drawablePadding="5dp"
            android:paddingRight="5dp"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceSmall" android:layout_alignTop="@+id/txt04"
            android:layout_marginTop="4dp" android:layout_marginStart="0dp" android:layout_marginEnd="0dp"
            android:layout_marginBottom="1dp" android:layout_marginRight="0dp"/>

    <TextView
            android:id="@+id/txt04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:layout_below="@+id/txt01"
            android:drawableLeft="@drawable/ic_people"
            android:drawablePadding="5dp"
            android:text="홍길동"
            android:textColor="@color/iron"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="-18dp" android:layout_marginEnd="0dp" android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp" android:layout_marginRight="0dp"/>
</RelativeLayout>