<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Message"
        android:background="#3F51B5"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingTop="5dp"
                  android:paddingLeft="5dp"
                  android:paddingRight="5dp"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                  android:id="@+id/linearLayout5">
        <Button
                android:text="읽지않은쪽지"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="@drawable/btn_selector"
                android:id="@+id/btn_unread_note"
                android:textAllCaps="false"
        />
        <Button
                android:text="받은쪽지"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="@drawable/btn_selector"
                android:id="@+id/btn_received_note"
                android:textAllCaps="false"
        />
        <Button
                android:text="보낸쪽지"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="@drawable/btn_selector"
                android:id="@+id/btn_send_note"
        />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/message_recycler"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            app:layout_constraintStart_toStartOf="@+id/linearLayout5"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">

    </androidx.recyclerview.widget.RecyclerView>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="270dp"
            android:layout_height="100dp"
            android:paddingRight="150dp"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:id="@+id/pBar"
            android:indeterminateTint="#fff"
            android:background="#696969"
            app:layout_constraintEnd_toEndOf="@+id/message_recycler"
            app:layout_constraintStart_toStartOf="@+id/message_recycler"
            app:layout_constraintTop_toTopOf="@+id/message_recycler"
            app:layout_constraintBottom_toBottomOf="@+id/message_recycler"/>
    <TextView
            android:text="로딩중입니다"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_progress"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/pBar"
            app:layout_constraintBottom_toBottomOf="@+id/pBar"
            app:layout_constraintEnd_toEndOf="@+id/pBar"
            app:layout_constraintStart_toStartOf="@+id/pBar"/>


</androidx.constraintlayout.widget.ConstraintLayout>