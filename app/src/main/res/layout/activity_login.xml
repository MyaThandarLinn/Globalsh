<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".LoginActivity">
    <TextView
            android:text="@string/registering_message_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/instanceID"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>


    <ImageView
            android:layout_width="303dp"
            android:layout_height="265dp"
            app:srcCompat="@drawable/logo_top"
            android:alpha="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="176dp"
            android:layout_height="179dp"
            android:alpha="0.3"
            app:srcCompat="@drawable/logo_bottom"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:alpha="0.9"
            app:srcCompat="@drawable/logo_main" android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="315dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:hint="@string/id"
            android:ems="10"
            android:textColorHint="@android:color/darker_gray"
            android:drawableLeft="@drawable/user_id"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:id="@+id/et_input_id"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="315dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:textColorHint="@android:color/darker_gray"
            android:ems="10"
            android:drawableLeft="@drawable/pass_key"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:id="@+id/et_input_password"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/et_input_id" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Setting"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andada"
            android:textAllCaps="false"
            android:backgroundTint="@color/setup_bg_color"
            android:id="@+id/btn_to_setting"
            app:layout_constraintTop_toTopOf="@+id/btn_to_login"
            app:layout_constraintEnd_toStartOf="@+id/btn_to_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.93"/>

    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/login"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_to_login"
            android:fontFamily="@font/andada"
            android:backgroundTint="@color/setup_bg_color"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/et_input_password"
            app:layout_constraintEnd_toEndOf="@+id/et_input_password"/>
</androidx.constraintlayout.widget.ConstraintLayout>