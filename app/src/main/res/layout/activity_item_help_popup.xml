<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ItemHelpPopup">

    <TextView
            android:text="유통"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@id/item_hlelp_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"/>

    <LinearLayout
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:id="@+id/sp_MAS071"
            android:background="@drawable/spinner_custom_bg"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="@+id/textView4">
        <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spn_MAS071"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ms_dropdown_max_height="250dp"
                app:ms_padding_left="10dp"
                android:backgroundTint="#11000000"
                app:ms_padding_top="1dp"
                app:ms_padding_bottom="1dp"
                app:ms_padding_right="2dp"
                app:ms_popup_padding_left="10dp"
                app:ms_popup_padding_top="-2dp"
                app:ms_popup_padding_bottom="-2dp"/>
    </LinearLayout>

    <TextView
            android:text="모델"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/sp_MAS071"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/sp_MAS071"
            app:layout_constraintTop_toTopOf="@+id/sp_MAS071"/>

    <LinearLayout
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@drawable/spinner_custom_bg"
            android:id="@+id/sp_MAS072"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="@+id/textView5">
        <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spn_MAS072"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ms_dropdown_max_height="250dp"
                app:ms_padding_left="10dp"
                android:backgroundTint="#11000000"
                app:ms_padding_top="1dp"
                app:ms_padding_bottom="1dp"
                app:ms_padding_right="2dp"
                app:ms_popup_padding_left="10dp"
                app:ms_popup_padding_top="-2dp"
                app:ms_popup_padding_bottom="-2dp"/>
    </LinearLayout>

    <TextView
            android:text="모델"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView4"/>

    <LinearLayout
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:id="@+id/sp_MAS073"
            android:background="@drawable/spinner_custom_bg"
            app:layout_constraintEnd_toEndOf="@+id/sp_MAS071"
            app:layout_constraintStart_toStartOf="@+id/sp_MAS071"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="@+id/textView6">
        <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spn_MAS073"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ms_dropdown_max_height="250dp"
                app:ms_padding_left="10dp"
                android:backgroundTint="#11000000"
                app:ms_padding_top="1dp"
                app:ms_padding_bottom="1dp"
                app:ms_padding_right="2dp"
                app:ms_popup_padding_left="10dp"
                app:ms_popup_padding_top="-2dp"
                app:ms_popup_padding_bottom="-2dp"/>
    </LinearLayout>

    <TextView
            android:text="패턴"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/sp_MAS073"
            app:layout_constraintBottom_toBottomOf="@+id/sp_MAS073"/>

    <LinearLayout
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@drawable/spinner_custom_bg"
            android:id="@+id/sp_MAS074"
            app:layout_constraintStart_toStartOf="@+id/sp_MAS072"
            app:layout_constraintEnd_toEndOf="@+id/sp_MAS072"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:layout_constraintBottom_toBottomOf="@+id/textView7">
        <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spn_MAS074"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ms_dropdown_max_height="250dp"
                app:ms_padding_left="10dp"
                android:backgroundTint="#11000000"
                app:ms_padding_top="1dp"
                app:ms_padding_bottom="1dp"
                app:ms_padding_right="2dp"
                app:ms_popup_padding_left="10dp"
                app:ms_popup_padding_top="-2dp"
                app:ms_popup_padding_bottom="-2dp"/>
    </LinearLayout>

    <TextView
            android:text="검색"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/textView6"/>
    <EditText
            android:layout_width="200dp"
            style="@style/edit_text_style"
            android:id="@+id/editText3"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/sp_MAS073"
            app:layout_constraintTop_toTopOf="@+id/textView8"/>
    <Button
            android:text="조회"
            android:layout_width="80dp"
            android:id="@+id/btnSearch"
            app:layout_constraintStart_toEndOf="@+id/editText3"
            android:layout_marginStart="8dp"
            style="@style/button_style_1"
            app:layout_constraintTop_toTopOf="@+id/editText3"
            app:layout_constraintBottom_toBottomOf="@+id/editText3" app:layout_constraintEnd_toEndOf="@+id/sp_MAS074"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/item_help_recycler" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_go_bck_to_as_com"/>

    <Button
            android:text="확인"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_go_bck_to_as_com"
            style="@style/button_style_1"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="취소"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/bck_to_pg15"
            style="@style/button_style_1"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/btn_go_bck_to_as_com"
            app:layout_constraintBottom_toBottomOf="@+id/btn_go_bck_to_as_com"/>

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="#fff"
            app:subtitleTextColor="#f5fbff"
            android:padding="1dp"
            android:id="@+id/item_hlelp_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:background="@color/table_title_row_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editText3"
            android:id="@+id/linearLayout3">
        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="0.5"
                  android:gravity="center"
                  style="@style/table_text"
                  android:text="No"
        />
        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1.5"
                  android:gravity="center"
                  style="@style/table_text"
                  android:text="@string/product_name"
        />
        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center"
                  style="@style/table_text"
                  android:text="@string/circulation"
        />
        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center"
                  style="@style/table_text"
                  android:text="@string/part_number"
        />
    </LinearLayout>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline7"
            app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>
