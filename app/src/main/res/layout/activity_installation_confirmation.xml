                    app:layout_constraintEnd_toEndOf="@+id/et_mod1_Phone_number"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/et_mod1_customer_name"/>
            <TextView
                    android:id="@+id/tv_customer_name"
                    style="@style/textView_style"
                    android:text="@string/customer_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/et_mod1_customer_name"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="32dp"/>
            <TextView
                    android:id="@+id/tvAddress"
                    android:text="@string/address"
                    style="@style/textView_style"
                    app:layout_constraintStart_toStartOf="@+id/tv_customer_name"
                    app:layout_constraintEnd_toEndOf="@+id/tv_customer_name"
                    app:layout_constraintHorizontal_bias="0.375" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_customer_name" android:layout_width="0dp"/>
            <TextView
                    android:id="@+id/et_mod1_customer_name"
                    style="@style/edit_text_style"
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    app:layout_constraintStart_toEndOf="@+id/tv_customer_name"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_customer_name"
                    app:layout_constraintEnd_toStartOf="@+id/tvPhno"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
                    app:layout_constraintVertical_bias="0.39"/>
            <TextView
                    style="@style/edit_text_style"
                    android:layout_width="120dp"
                    android:inputType="textPersonName"
                    android:id="@+id/et_mod1_Phone_number"
                    app:layout_constraintStart_toEndOf="@+id/tvPhno"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/tvPhno"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPhno"/>
            <TextView
                    android:id="@+id/tvPhno"
                    android:text="@string/phone_number"
                    style="@style/textView_style"
                    app:layout_constraintStart_toEndOf="@+id/et_mod1_customer_name"
                    app:layout_constraintTop_toTopOf="@+id/et_mod1_customer_name"
                    app:layout_constraintBottom_toBottomOf="@+id/et_mod1_customer_name"
                    app:layout_constraintVertical_bias="0.454"
                    app:layout_constraintEnd_toStartOf="@+id/et_mod1_Phone_number" android:layout_marginEnd="4dp"/>
            <TextView
                    style="@style/edit_text_style"
                    android:layout_width="0dp"
                    android:inputType="textPersonName"
                    android:id="@+id/et_dcd_address_detail"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_mod1_Address"
                    app:layout_constraintEnd_toEndOf="@+id/et_mod1_Address"
                    app:layout_constraintStart_toStartOf="@+id/et_mod1_Address"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
            <TextView
                    android:id="@+id/textView3"
                    android:text="@string/product_installation_things_to_check"
                    style="@style/title_textView_style"
                    app:layout_constraintStart_toStartOf="@+id/et_dcd_address_detail"
                    app:layout_constraintEnd_toEndOf="@+id/et_dcd_address_detail"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_dcd_address_detail"
                    app:layout_constraintHorizontal_bias="0.415"/>
            <CheckBox
                    android:text="@string/check_1_string"
                    android:id="@+id/cb_mod1_1"
                    style="@style/check_box_style"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/tv_customer_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
            <CheckBox
                    android:text="@string/check_2_string"
                    android:id="@+id/cb_mod1_2"
                    style="@style/check_box_style"
                    app:layout_constraintStart_toStartOf="@+id/cb_mod1_1"
                    app:layout_constraintEnd_toEndOf="@+id/cb_mod1_1"
                    app:layout_constraintTop_toBottomOf="@+id/cb_mod1_1"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <CheckBox
                    android:text="@string/check_3_string"
                    android:id="@+id/cb_mod1_3"
                    style="@style/check_box_style"
                    app:layout_constraintStart_toStartOf="@+id/cb_mod1_2"
                    app:layout_constraintEnd_toEndOf="@+id/cb_mod1_2"
                    app:layout_constraintTop_toBottomOf="@+id/cb_mod1_2"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <CheckBox
                    android:text="@string/check_4_string"
                    android:id="@+id/cb_mod1_4"
                    style="@style/check_box_style"
                    app:layout_constraintStart_toStartOf="@+id/cb_mod1_3"
                    app:layout_constraintEnd_toEndOf="@+id/cb_mod1_3"
                    app:layout_constraintTop_toBottomOf="@+id/cb_mod1_3"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <CheckBox
                    android:text="@string/check_5_string"
                    android:id="@+id/cb_mod1_5"
                    style="@style/check_box_style"
                    app:layout_constraintStart_toStartOf="@+id/cb_mod1_4"
                    app:layout_constraintTop_toBottomOf="@+id/cb_mod1_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <CheckBox
                    android:text="@string/check_6_string"
                    android:id="@+id/cb_mod1_6"
                    style="@style/check_box_style"
                    app:layout_constraintStart_toStartOf="@+id/cb_mod1_5"
                    app:layout_constraintEnd_toEndOf="@+id/cb_mod1_5"
                    app:layout_constraintTop_toBottomOf="@+id/cb_mod1_5"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:id="@+id/textView6"
                    android:text="@string/add_components_check"
                    style="@style/title_textView_style"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/cb_mod1_6"
                    app:layout_constraintStart_toStartOf="@+id/cb_mod1_6"
                    app:layout_constraintEnd_toEndOf="@+id/cb_mod1_5"
                    app:layout_constraintHorizontal_bias="0.551"/>
            <CheckBox
                    android:id="@+id/cbShelf"
                    android:text="@string/shelf"
                    style="@style/check_box_style"
                    app:layout_constraintStart_toStartOf="@+id/cb_mod1_6"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    android:layout_width="80dp" android:layout_marginTop="16dp"/>
            <CheckBox
                    android:id="@+id/cbBattery"
                    android:text="@string/battery"
                    style="@style/check_box_style"
                    app:layout_constraintStart_toStartOf="@+id/cbShelf"
                    app:layout_constraintEnd_toEndOf="@+id/cbShelf"
                    app:layout_constraintTop_toBottomOf="@+id/cbShelf"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_width="80dp"
            />
            <EditText
                    android:layout_width="82dp"
                    android:layout_height="30dp"
                    android:background="@color/color_transparent"
                    android:textSize="12sp"
                    android:paddingLeft="8dp"
                    android:inputType="textPersonName"
                    android:id="@+id/et_DT_DLV_SCH"
                    app:layout_constraintTop_toTopOf="@+id/cbKeyin_1"
                    app:layout_constraintBottom_toBottomOf="@+id/cbKeyin_1"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/cbKeyin_1"
            />
            <CheckBox
                    android:id="@+id/cbKeyin_1"
                    style="@style/check_box_style"
                    app:layout_constraintStart_toStartOf="@+id/cbBattery"
                    app:layout_constraintEnd_toEndOf="@+id/cbBattery"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cbBattery"/>
            <CheckBox
                    android:text="@string/adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbAdapter"
                    app:layout_constraintStart_toStartOf="@+id/cbManual"
                    app:layout_constraintEnd_toEndOf="@+id/cbManual"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/cbShelf"
                    app:layout_constraintBottom_toBottomOf="@+id/cbShelf"/>
            <CheckBox
                    android:text="@string/manual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbManual"
                    app:layout_constraintStart_toStartOf="@+id/cbKeyin_2"
                    app:layout_constraintEnd_toEndOf="@+id/cbKeyin_2"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="@+id/cbBattery"
                    app:layout_constraintTop_toTopOf="@+id/cbBattery"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbKeyin_2"
                    app:layout_constraintBottom_toBottomOf="@+id/cbKeyin_1"
                    app:layout_constraintTop_toTopOf="@+id/et_DT_DLV_SCH"
                    app:layout_constraintStart_toEndOf="@+id/et_DT_DLV_SCH"
            />
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbKeyin_3"
                    app:layout_constraintStart_toEndOf="@+id/et_D_FG_TIME"
                    app:layout_constraintTop_toTopOf="@+id/et_D_FG_TIME"
                    app:layout_constraintBottom_toBottomOf="@+id/et_D_FG_TIME"
                    app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="@string/collection_of_pinfo_agree"
                    android:id="@+id/title_toolbar"
                    style="@style/title_textView_style"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_D_FG_TIME"
                    app:layout_constraintStart_toStartOf="@+id/cbKeyin_1"
                    app:layout_constraintEnd_toEndOf="@+id/et_D_FG_DLV"/>
            <TextView
                    android:text="@string/user_agree1"
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    style="@style/textView_style"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/title_toolbar"
                    app:layout_constraintStart_toStartOf="@+id/title_toolbar"
                    app:layout_constraintEnd_toEndOf="@+id/title_toolbar" android:layout_marginStart="8dp"/>
            <CheckBox
                    android:text="@string/check_7_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_agree"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    app:layout_constraintStart_toStartOf="@+id/textView11"
                    android:layout_marginStart="148dp"
            />
            <CheckBox
                    android:text="@string/check_8_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_disagree"
                    app:layout_constraintTop_toTopOf="@+id/cb_agree"
                    app:layout_constraintBottom_toBottomOf="@+id/cb_agree"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toEndOf="@+id/textView11"
                    app:layout_constraintStart_toEndOf="@+id/cb_agree" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <LinearLayout
                    android:id="@+id/linear_agree"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/signature_pad_rounded_background"
                    app:layout_constraintTop_toBottomOf="@+id/cb_agree"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.195"
                    android:layout_marginTop="8dp">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/user_agree6"
                          android:layout_marginLeft="10dp"
                          android:layout_marginTop="5dp"
                          android:textColor="@color/black"
                />
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_marginTop="5dp"
                      android:background="@color/iron"
                />
                <com.github.gcacace.signaturepad.views.SignaturePad
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ic_imgV"
                        android:background="@color/white"
                        android:layout_marginTop="10dp"
                        app:penColor="@android:color/black"
                />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/save_and_cancel_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@+id/linear_sign"
                    app:layout_constraintEnd_toEndOf="@+id/linear_sign" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/linear_sign">
                <Button
                        style="@style/button_style_1"
                        android:id="@+id/btn_save_and_finish"
                        android:layout_width="80dp"
                        android:enabled="false"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="30dp"
                        android:text="@string/btn_confirm"
                />
                <Button
                        android:id="@+id/btn_finish"
                        style="@style/button_style_2"
                        android:layout_width="80dp"
                        android:text="@string/btn_cancel"

                />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/linear_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linear_agree"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="@+id/linear_agree"
                    app:layout_constraintHorizontal_bias="0.539">
                <Button
                        android:text="@string/save_text"
                        style="@style/button_style_1"
                        android:layout_width="80dp"
                        android:id="@+id/uploadSign"
                        android:enabled="false"
                        android:layout_marginRight="10dp"
                />
                <Button
                        android:text="@string/cancel_text"
                        style="@style/button_style_2"
                        android:layout_width="80dp"
                        android:enabled="false"
                        android:id="@+id/btnCls"
                />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</LinearLayout>



