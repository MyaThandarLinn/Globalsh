            android:background="?attr/colorPrimary"
            app:titleTextColor="#fff"
            app:subtitleTextColor="#f5fbff"
            android:padding="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvtitle"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">
            <TextView
                    android:layout_width="match_parent"
                    android:text="@string/user_agree5"
                    android:id="@+id/textView11"
                    android:layout_marginTop="16dp"
                    style="@style/textView_style"
                    app:layout_constraintTop_toBottomOf="@+id/textView10"
                    app:layout_constraintEnd_toEndOf="@+id/textView10"
                    app:layout_constraintStart_toStartOf="@+id/textView10"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="@string/user_agree4"
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    style="@style/textView_style"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:layout_constraintEnd_toEndOf="@+id/textView9"
                    app:layout_constraintStart_toStartOf="@+id/textView9" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/user_agree3"
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    style="@style/textView_style"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    app:layout_constraintEnd_toEndOf="@+id/textView8"
                    app:layout_constraintStart_toStartOf="@+id/textView8"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/user_agree2"
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    style="@style/textView_style"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintEnd_toEndOf="@+id/textView7"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
            <CheckBox
                    android:text="@string/key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbKey"
                    app:layout_constraintStart_toStartOf="@+id/cb_jbox"
                    app:layout_constraintEnd_toEndOf="@+id/cb_jbox" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="@+id/cbAdapter"
                    app:layout_constraintBottom_toBottomOf="@+id/cbAdapter"/>
            <CheckBox
                    android:text="@string/jewelry_boxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_jbox"
                    app:layout_constraintStart_toStartOf="@+id/cbKeyin_3"
                    app:layout_constraintEnd_toStartOf="@+id/et_D_FG_DLV"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="@+id/cbManual"
                    app:layout_constraintBottom_toBottomOf="@+id/cbManual"/>
            <EditText
                    android:layout_width="82dp"
                    android:layout_height="30dp"
                    android:background="@color/color_transparent"
                    android:textSize="12sp"
                    android:paddingLeft="8dp"
                    android:inputType="textPersonName"
                    android:id="@+id/et_D_FG_DLV"
                    app:layout_constraintTop_toTopOf="@+id/cbKeyin_3"
                    app:layout_constraintStart_toEndOf="@+id/cbKeyin_3"
                    app:layout_constraintBottom_toBottomOf="@+id/cbKeyin_3"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toEndOf="@+id/cb_mod1_6" app:layout_constraintHorizontal_bias="0.0"/>
            <EditText
                    android:layout_width="82dp"
                    android:layout_height="30dp"
                    android:background="@color/color_transparent"
                    android:textSize="12sp"
                    android:paddingLeft="8dp"
                    android:inputType="textPersonName"
                    android:id="@+id/et_D_FG_TIME"
                    app:layout_constraintStart_toEndOf="@+id/cbKeyin_2"
                    app:layout_constraintBottom_toBottomOf="@+id/cbKeyin_2"
                    app:layout_constraintTop_toTopOf="@+id/cbKeyin_2"/>
            <TextView
                    style="@style/edit_text_style"
                    android:layout_width="0dp"
                    android:inputType="textPersonName"
                    android:id="@+id/et_mod1_Address"
