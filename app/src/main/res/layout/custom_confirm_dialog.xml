<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <View
            android:layout_width="match_parent"
            android:layout_height="3dp" android:id="@+id/view2"
            android:background="@color/table_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView67"/>
    <TextView
            android:text="@string/msg_finish_erp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_height="99dp" android:id="@+id/textView33"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/view2"/>
    <TextView
            android:text="YES"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:id="@+id/dialog_yes"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/textView33"/>
    <TextView
            android:text="NO"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/dialog_no"
            android:gravity="center"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/textView33"
            app:layout_constraintEnd_toStartOf="@+id/view8" app:layout_constraintStart_toStartOf="parent"
    />
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline8"
            app:layout_constraintGuide_percent="0.5"/>

    <TextView
            android:text="ERP종료"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_logout"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:textSize="25sp"
            android:textColor="@color/table_header"
            android:layout_height="70dp"
            android:id="@+id/textView67"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/view7"
            app:layout_constraintTop_toBottomOf="@+id/textView33"/>
    <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:id="@+id/view8"
            android:background="#d3d3d3"
            app:layout_constraintTop_toBottomOf="@+id/view7" app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintEnd_toStartOf="@+id/guideline8" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>