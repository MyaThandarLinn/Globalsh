<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#BF000000"
        android:layout_height="wrap_content"
        tools:context="ApprovalActivity">
    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="50dp"
            android:layout_margin="7dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="26dp"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="@string/msg_loading"
            app:layout_constraintTop_toTopOf="@+id/progressBar"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar"
            app:layout_constraintStart_toEndOf="@+id/progressBar" android:layout_marginStart="24dp"
            app:layout_constraintVertical_bias="0.516" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.044"/>
</androidx.constraintlayout.widget.ConstraintLayout>
