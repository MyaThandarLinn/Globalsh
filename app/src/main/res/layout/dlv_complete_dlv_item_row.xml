<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="327dp"
            android:layout_height="28dp"
            android:id="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:id="@+id/dcd_no"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:text="No"
                android:gravity="center"
                android:background="@drawable/table_bg"/>
        <TextView
                android:id="@+id/dcd_nm_item"
                android:background="@drawable/table_bg"
                android:text="@string/product_name_1"
                android:layout_width="172dp"
                android:gravity="center"
                android:layout_height="match_parent"/>
        <EditText
                android:id="@+id/dcd_sn"
                android:text="SN"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@drawable/table_bg"
                android:layout_width="135dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>