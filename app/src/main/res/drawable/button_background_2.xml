<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <stroke
                    android:width="1dp"
                    android:color="@color/color_transparent"
            />
            <corners
                    android:radius="10dp"/>

            <padding
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp"
                    android:bottom="1dp"/>

            <solid android:color="@color/color_red"/>

        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke
                    android:width="1dp"
                    android:color="@color/color_transparent"
            />
            <corners
                    android:radius="10dp"/>

            <padding
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp"
                    android:bottom="1dp"/>

            <solid android:color="@color/color_red_disable"/>

        </shape>
    </item>
</selector>